<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hunspell.Maui.Sample.MainPage"
             Title="Hunspell Text Editor">

    <Grid Padding="20" RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="5">
            <Label 
                Text="Hunspell.NET Text Editor"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Label 
                Text="Type text below and click 'Check Spelling' to find misspelled words"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />
        </VerticalStackLayout>

        <!-- Text Editor -->
        <Border Grid.Row="1" 
                Stroke="{StaticResource Primary}"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1a1a1a}">
            <Editor 
                x:Name="TextEditor"
                Placeholder="Start typing here..."
                FontSize="16"
                HorizontalOptions="Fill"
                VerticalOptions="Fill" />
        </Border>

        <!-- Buttons -->
        <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="Center">
            <Button 
                x:Name="CheckSpellingBtn"
                Text="Check Spelling"
                Clicked="OnCheckSpellingClicked"
                SemanticProperties.Hint="Checks the spelling of the text"
                HorizontalOptions="Center" />
            <Button 
                x:Name="ClearBtn"
                Text="Clear"
                Clicked="OnClearClicked"
                SemanticProperties.Hint="Clears the text editor"
                HorizontalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Results -->
        <Border Grid.Row="3" 
                Stroke="{StaticResource Secondary}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10"
                Padding="15"
                MinimumHeightRequest="150"
                BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#2a2a2a}">
            <ScrollView>
                <Label 
                    x:Name="ResultsLabel"
                    Text="Results will appear here..."
                    FontSize="14"
                    VerticalOptions="Start" />
            </ScrollView>
        </Border>
    </Grid>

</ContentPage>
